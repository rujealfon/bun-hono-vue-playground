{
  "name": "server",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run type-check && bun run --hot src/index.ts",
    "dev:no-check": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.8",
    "@rujealfon/stoker": "^1.4.2",
    "hono": "^4.8.2",
    "hono-pino": "^0.8.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.1",
    "@types/bun": "latest",
    "eslint": "^9.29.0",
    "eslint-plugin-format": "^1.0.1"
  }
}

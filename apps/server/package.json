    "lint": "eslint src --fix",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@bun-hono-vue-playground/shared": "workspace:*",
    "@hono/node-server": "^1.13.1",
    "hono": "^4.6.11"
  },
  "devDependencies": {
    "@bun-hono-vue-playground/eslint-config": "workspace:*",
    "@bun-hono-vue-playground/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "typescript": "^5.6.3"
  }
}
